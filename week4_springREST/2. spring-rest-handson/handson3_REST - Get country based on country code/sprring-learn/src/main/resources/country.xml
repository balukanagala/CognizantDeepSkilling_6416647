<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean class="com.cognizant.sprring_learn.models.Country" id="countryIND">
        <property name="code" value="IN"/>
        <property name="name" value="India"/>
    </bean>

    <bean class="com.cognizant.sprring_learn.models.Country" id="countryUS">
        <property name="code" value="US"/>
        <property name="name" value="United States"/>
    </bean>

    <bean class="com.cognizant.sprring_learn.models.Country" id="countryJPN">
        <property name="code" value="JP"/>
        <property name="name" value="Japan"/>
    </bean>

    <bean class="com.cognizant.sprring_learn.models.Country" id="countryDE">
        <property name="code" value="DE"/>
        <property name="name" value="Germany"/>
    </bean>

    <bean name="countryList" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <ref bean="countryIND"></ref>
                <ref bean="countryUS"></ref>
                <ref bean="countryDE"></ref>
                <ref bean="countryJPN"></ref>
            </list>
        </constructor-arg>
    </bean>
</beans>